<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:strokeWidth="0dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/tvRateUs"
            android:layout_marginStart="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnClose"
            android:textColor="@color/darkBlue"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/rate_us1"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_cross"
            android:layout_marginEnd="20dp"
            android:scaleType="fitXY"
            android:padding="9dp"
            android:id="@+id/btnClose"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llStars"
            android:gravity="center"
            android:layout_marginHorizontal="33dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRateUs"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="33dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/ivStar1"
                android:src="@drawable/ic_star_filled"
                android:layout_height="33dp"/>

            <ImageView
                android:layout_width="33dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/ivStar2"
                android:src="@drawable/ic_star_filled"
                android:layout_height="33dp"/>

            <ImageView
                android:layout_width="33dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/ivStar3"
                android:src="@drawable/ic_star_filled"
                android:layout_height="33dp"/>

            <ImageView
                android:layout_width="33dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/ivStar4"
                android:src="@drawable/ic_star_filled"
                android:layout_height="33dp"/>

            <ImageView
                android:layout_width="33dp"
                android:id="@+id/ivStar5"
                android:src="@drawable/ic_star_unfilled"
                android:layout_height="33dp"/>

        </LinearLayout>

        <com.adsmodule.api.adsModule.interfaces.CustomView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mediumNativeAd"
            app:adType="medium"
            app:cardCornerRadius="20dp"
            android:visibility="gone"
            app:borderColor="@color/darkBlue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="37dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/llStars"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvExitMsg"
            android:textColor="#50000000"
            app:layout_constraintTop_toBottomOf="@id/mediumNativeAd"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginTop="27dp"
            android:textSize="14sp"
            android:text="@string/do_you_really_want_to_exit_the_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="167dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/darkBlue"
            android:layout_marginTop="32dp"
            android:text="@string/exit_app"
            android:fontFamily="@font/inter_medium"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="36dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvExitMsg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>