<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_home"
    tools:context=".home.HomeFragment">


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="321dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:visibility="visible"
        app:itemIconTint="@null">

        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/navFragContainer"
            android:name="com.ide.codekit.celebrityprankvideocall.home.NavViewFragment"/>

    </com.google.android.material.navigation.NavigationView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeWidth="0dp"
            android:id="@+id/toolbarCard"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingTop="50dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/ic_menu"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:id="@+id/ivMenu"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="0dp"
                    app:layout_constraintStart_toEndOf="@id/ivMenu"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="15dp"
                    app:layout_constraintTop_toTopOf="@id/ivMenu"
                    app:layout_constraintBottom_toBottomOf="@id/ivMenu"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/app_name"
                    android:fontFamily="@font/inter_medium"
                    android:maxLines="1"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:background="@color/white"
            android:id="@+id/whiteLine"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/toolbarCard"
            android:layout_height="1dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="34dp"
            android:id="@+id/clCallMsg"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/whiteLine"
            android:background="@drawable/call_celebrity_msg_bg"
            android:layout_height="150dp">

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/msgGd"
                app:layout_constraintGuide_percent="0.6"/>

            <TextView
                android:layout_width="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="26dp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@id/msgGd"
                android:fontFamily="@font/inter_medium"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="@string/effortlessly_call_your_nfavourite_celebrity_with_njust_one_tap"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:id="@+id/clMsg"
            android:background="@drawable/msg_card_bg"
            app:layout_constraintDimensionRatio="1:0.7"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/clVideoCall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/clCallHistory"
            android:layout_height="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMessages"
                android:textSize="14sp"
                android:fontFamily="@font/inter_semibold"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:textColor="@color/white"
                android:text="@string/messages"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:id="@+id/clAudio"
            android:layout_marginTop="51dp"
            app:layout_constraintDimensionRatio="1:0.7"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/audio_call_card_bg"
            app:layout_constraintStart_toEndOf="@id/clVideoCall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clCallMsg"
            android:layout_height="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAudio"
                android:textSize="14sp"
                android:fontFamily="@font/inter_semibold"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:textColor="@color/white"
                android:text="@string/audio_call"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:id="@+id/clVideoCall"
            android:background="@drawable/video_card_bg"
            app:layout_constraintDimensionRatio="1:0.7"
            android:layout_marginStart="20dp"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/clCallMsg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/clAudio"
            android:layout_height="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvVideoCall"
                android:textSize="14sp"
                android:fontFamily="@font/inter_semibold"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:textColor="@color/white"
                android:text="@string/video_call"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:id="@+id/clCallHistory"
            android:layout_marginTop="18dp"
            app:layout_constraintDimensionRatio="1:0.7"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/call_history_bg"
            app:layout_constraintStart_toEndOf="@id/clMsg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clAudio"
            android:layout_height="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCallHistory"
                android:textSize="14sp"
                android:fontFamily="@font/inter_semibold"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:textColor="@color/white"
                android:text="@string/history"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>