<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".calllog.CallLogFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="0dp"
        android:id="@+id/toolbarCard"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingTop="40dp"
            android:paddingHorizontal="15dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_back_arrow"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:id="@+id/btnBackArrow"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintTop_toTopOf="@id/btnBackArrow"
                app:layout_constraintBottom_toBottomOf="@id/btnBackArrow"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="@string/chat"
                android:id="@+id/tvTitle"
                android:fontFamily="@font/inter_medium"
                android:maxLines="1"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/whiteLine"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarCard"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/white_bg_stroke"
        app:layout_constraintTop_toBottomOf="@id/whiteLine"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:id="@+id/llSearchView"
        android:layout_height="45dp">

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_search"
            android:id="@+id/ivSearch"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:hint="@string/type_here_to_search_something"
            android:textColor="@color/white"
            android:paddingStart="15dp"
            android:layout_height="match_parent"
            android:id="@+id/searchEdtTxt"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_clear"
            android:id="@+id/btnClear"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rvChats"
        app:layout_constraintTop_toBottomOf="@id/llSearchView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/llTabOptions"
        android:layout_height="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/tvNoChatsFound"
        app:layout_constraintTop_toBottomOf="@id/llSearchView"
        app:layout_constraintStart_toStartOf="parent"
        android:alpha="0.5"
        android:visibility="gone"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnStart"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/white"
        android:text="@string/no_chats_found"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColor="@color/darkBlue"
        app:cornerRadius="10dp"
        android:id="@+id/btnStart"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@id/llTabOptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNoChatsFound"
        android:text="@string/start_a_new_chat"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rvAudioCalls"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/llSearchView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/llTabOptions"
        android:layout_height="0dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/rvVideoCalls"
        app:layout_constraintTop_toBottomOf="@id/llSearchView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/llTabOptions"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/smallNativeAd"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        android:id="@+id/llTabOptions"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:id="@+id/llChat"
            android:paddingVertical="10dp"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_chat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/inter_medium"
                android:textSize="14sp"
                android:textColor="@color/white"/>

        </LinearLayout>
        
        <View
            android:layout_marginStart="23dp"
            android:layout_width="1dp"
            android:background="@color/white"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:id="@+id/llAudio"
            android:alpha="0.4"
            android:paddingVertical="10dp"
            android:layout_marginStart="23dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_call"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/audio"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/inter_medium"
                android:textSize="14sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <View
            android:layout_marginStart="23dp"
            android:layout_width="1dp"
            android:background="@color/white"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:id="@+id/llVideo"
            android:alpha="0.4"
            android:layout_marginStart="23dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_video"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/inter_medium"
                android:textSize="14sp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>
    <com.adsmodule.api.adsModule.interfaces.CustomView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/smallNativeAd"
        app:adType="small"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>