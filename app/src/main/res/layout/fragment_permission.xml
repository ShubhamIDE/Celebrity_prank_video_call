<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".splash.PermissionFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbarCard"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingTop="40dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPermissionReq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:maxLines="1"
                android:textColor="@color/white"
                android:text="@string/permission_required"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="18.5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/whiteLine"
        app:layout_constraintTop_toBottomOf="@id/toolbarCard"
        android:layout_height="1dp"/>

    <com.adsmodule.api.adsModule.interfaces.CustomView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:borderColor="@color/white"
        app:adType="full"
        android:id="@+id/fullNativeAd"
        app:layout_constraintTop_toBottomOf="@id/whiteLine"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp"/>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        app:cardBackgroundColor="#45ffffff"
        android:layout_marginHorizontal="16dp"
        app:strokeWidth="1dp"
        android:id="@+id/permCard1"
        app:strokeColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/fullNativeAd">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="25dp"
            android:paddingVertical="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:src="@mipmap/ic_launcher"
                android:layout_height="25dp"
                android:id="@+id/ivPerm"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="14sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@id/cbCamera"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivPerm"/>
            
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="25dp"
                android:id="@+id/cbCamera"
                android:buttonTint="@color/perms_radio_selector"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="25dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
    
    <com.google.android.material.button.MaterialButton
        android:layout_width="207dp"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:id="@+id/btnGrantPerm"
        android:text="@string/grant_permission"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/permCard1"
        android:backgroundTint="@color/white"
        android:textColor="@color/darkBlue"/>

</androidx.constraintlayout.widget.ConstraintLayout>