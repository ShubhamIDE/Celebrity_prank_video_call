<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:id="@+id/ivLogo"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/seperatorLine"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="50dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        app:layout_constraintStart_toEndOf="@id/ivLogo"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@id/llActions"
        android:fontFamily="@font/inter_semibold"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/tvMessage"
        app:layout_constraintVertical_chainStyle="packed"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/ivLogo"
        android:maxLines="1"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvMessage"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@id/llActions"
        app:layout_constraintStart_toEndOf="@id/ivLogo"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="@id/ivLogo"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/llActions"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:padding="12.5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_call"
            android:backgroundTint="@android:color/transparent"
            android:visibility="gone"
            app:tint="@color/lightGreen"
            android:id="@+id/ivCall"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:scaleType="centerInside"
            android:padding="12.5dp"
            android:src="@drawable/ic_video"
            app:tint="@color/red"
            android:id="@+id/ivVideoCall"
            android:backgroundTint="@android:color/transparent"
            android:visibility="gone"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp"
            android:id="@+id/cardMsgCount"
            app:strokeWidth="1dp"
            android:visibility="gone"
            app:strokeColor="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:maxLines="1"
                android:padding="10dp"
                android:id="@+id/msgCount"
                android:text="23"
                android:fontFamily="@font/inter_regular"
                android:textSize="12sp"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/seperatorLine"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>